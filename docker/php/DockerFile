# =============================
# 1️⃣ Etapa de build (Composer + NPM)
# =============================
FROM php:8.2-fpm AS build

RUN apt-get update && apt-get install -y \
    libpq-dev zip unzip git curl nodejs npm \
 && docker-php-ext-install pdo_pgsql bcmath

COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html
COPY . .

# Instalar dependencias PHP (sin dev) y optimizar
RUN COMPOSER_MEMORY_LIMIT=-1 composer install --no-dev --prefer-dist --optimize-autoloader

# Construir assets
RUN npm ci && npm run build

# =============================
# 2️⃣ Etapa final (producción)
# =============================
FROM php:8.2-fpm

RUN apt-get update && apt-get install -y \
    libpq-dev zip unzip git curl \
 && docker-php-ext-install pdo_pgsql bcmath \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html

COPY --from=build /var/www/html /var/www/html

# Permisos para Laravel
RUN chown -R www-data:www-data storage bootstrap/cache \
 && chmod -R 775 storage bootstrap/cache

COPY docker/php/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["php-fpm"]
